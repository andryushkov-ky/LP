.nucleus {
    max-width: 914px;
    margin: 0 auto;
    padding: 0 40px;
    box-sizing: content-box;
}

@media only screen and (max-width: 1023px) {
    .nucleus {
        display: flex;
        align-items: center;
        flex-direction: column;
    }
}

@media only screen and (max-width: 425px) {
    .nucleus {
        padding: 0 20px;
    }
}