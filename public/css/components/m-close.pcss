.m-close {
    flex-shrink: 0;
    background: transparent;
    width: 60px;
    height: 60px;
    transform: scale(1) translateZ(0);
    cursor: pointer;
}

.m-close__hamburger {
    width: 30px;
    height: 3px;
    background: var(--Main3);
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -15px;
    margin-top: -1.5px;

    &--1 {
        transform: translateZ(0) rotate(45deg);
    }

    &--2 {
        transform: translateZ(0) rotate(-45deg);
    }
}